    "<language>php</language><?php\n",
    "\n",
 "// Userクラス\n",
 "class User {\n",
    "    readonly string $id;\n",
    "    private string $username;\n",
    "    private string $email;\n",
    "    private string $passwordHash;\n",
    "    private string $role; // admin, editor, author, subscriber\n",
    "    private string $status; // active, suspended, deleted\n",
    "    private array $profile;\n",
    "    private readonly DateTime $createdAt;\n",
    "    private ?DateTime $updatedAt;\n",
    "    \n",
    "    public function __construct(string $id, string $username, string $email, string $role = 'subscriber') {\n",
    "        $this->id = $id;\n",
    "        $this->setUsername($username);\n",
    "        $this->setEmail($email);\n",
    "        $this->setRole($role);\n",
    "        $this->status = 'active';\n",
    "        $this->profile = [];\n",
    "        $this->createdAt = new DateTime();\n",
    "        $this->updatedAt = new DateTime();\n",
    "    }\n",
    "    \n",
    "    // 全プロパティのgetter\n",
    "    public function getId(): string {\n",
    "        return $this->id;\n",
    "    }\n",
    "    \n",
    "    public function getUsername(): string {\n",
    "        return $this->username;\n",
    "    }\n",
    "    \n",
    "    public function getEmail(): string {\n",
    "        return $this->email;\n",
    "    }\n",
    "    \n",
    "    public function getRole(): string {\n",
    "        return $this->role;\n",
    "    }\n",
    "    \n",
    "    public function getStatus(): string {\n",
    "        return $this->status;\n",
    "    }\n",
    "    \n",
    "    public function getProfile(): array {\n",
    "        return $this->profile;\n",
    "    }\n",
    "    \n",
    "    public function getCreatedAt(): DateTime {\n",
    "        return $this->createdAt;\n",
    "    }\n",
    "    \n",
    "    public function getUpdatedAt(): ?DateTime {\n",
    "        return $this->updatedAt;\n",
    "    }\n",
    "    \n",
    "    // setter（statusはsetterでのみ変更可能）\n",
    "    public function setUsername(string $username): void {\n",
    "        if (empty(trim($username))) {\n",
    "            throw new InvalidArgumentException('ユーザー名は必須です');\n",
    "        }\n",
    "        $this->username = $username;\n",
    "        $this->updateTimestamp();\n",
    "    }\n",
    "    \n",
    "    public function setEmail(string $email): void {\n",
    "        if (!filter_var($email, FILTER_VALIDATE_EMAIL)) {\n",
    "            throw new InvalidArgumentException('メールアドレスの形式が不正です');\n",
    "        }\n",
    "        $this->email = $email;\n",
    "        $this->updateTimestamp();\n",
    "    }\n",
    "    \n",
    "    public function setPassword(string $newPassword, ?string $oldPassword = null): void {\n",
    "        if ($oldPassword && !$this->verifyPassword($oldPassword)) {\n",
    "            throw new RuntimeException('古いパスワードが一致しません');\n",
    "        }\n",
    "        $this->passwordHash = password_hash($newPassword, PASSWORD_DEFAULT);\n",
    "        $this->updateTimestamp();\n",
    "    }\n",
    "    \n",
    "    public function setRole(string $role): void {\n",
    "        $validRoles = ['admin', 'editor', 'author', 'subscriber'];\n",
    "        if (!in_array($role, $validRoles)) {\n",
    "            throw new InvalidArgumentException('無効なロールです');\n",
    "        }\n",
    "        $this->role = $role;\n",
    "        $this->updateTimestamp();\n",
    "    }\n",
    "    \n",
    "    public function setStatus(string $status): void {\n",
    "        $validStatus = ['active', 'suspended', 'deleted'];\n",
    "        if (!in_array($status, $validStatus)) {\n",
    "            throw new InvalidArgumentException('無効なステータスです');\n",
    "        }\n",
    "        $oldStatus = $this->status;\n",
    "        $this->status = $status;\n",
    "        \n",
    "        // ステータス変更時にログインフラグを更新\n",
    "        if ($oldStatus === 'active' && $status !== 'active') {\n",
    "            echo \"ユーザー '{$this->username}' が非アクティブになりました\\n\";\n",
    "        }\n",
    "        \n",
    "        $this->updateTimestamp();\n",
    "    }\n",
    "    \n",
    "    public function updateProfile(array $data): void {\n",
    "        foreach ($data as $key => $value) {\n",
    "            if ($key === 'username' || $key === 'email' || $key === 'role' || $key === 'status') {\n",
    "                continue; // 特殊プロパティは更新しない\n",
    "            }\n",
    "            $this->profile[$key] = $value;\n",
    "        }\n",
    "        $this->updateTimestamp();\n",
    "    }\n",
    "    \n",
    "    // 権限チェックメソッド\n",
    "    public function canPublish(): bool {\n",
    "        return in_array($this->role, ['admin', 'editor', 'author']);\n",
    "    }\n",
    "    \n",
    "    public function canEdit(int $targetUserId): bool {\n",
    "        // 自分自身の編集は常に可能\n",
    "        if ($targetUserId === (int)$this->id) {\n",
    "            return true;\n",
    "        }\n",
    "        \n",
    "        // adminは全員を編集可能\n",
    "        if ($this->role === 'admin') {\n",
    "            return true;\n",
    "        }\n",
    "        \n",
    "        // editorはauthorとsubscriberを編集可能\n",
    "        if ($this->role === 'editor') {\n",
    "            return true;\n",
    "        }\n",
    "        \n",
    "        // authorは自分自身の記事のみ\n",
    "        return false;\n",
    "    }\n",
    "    \n",
    "    public function canDelete(int $targetUserId): bool {\n",
    "        // 自分自身の削除は常に可能\n",
    "        if ($targetUserId === (int)$this->id) {\n",
    "            return true;\n",
    "        }\n",
    "        \n",
    "        // adminのみ他人を削除可能\n",
    "        return $this->role === 'admin';\n",
    "    }\n",
    "    \n",
    "    // ヘルパーメソッド\n",
    "    private function updateTimestamp(): void {\n",
    "        $this->updatedAt = new DateTime();\n",
    "    }\n",
    "    \n",
    "    private function verifyPassword(string $password): bool {\n",
    "        return password_verify($password, $this->passwordHash);\n",
    "    }\n",
    "}\n",
    "\n",
 "// Permissionクラス（静的クラス）\n",
 "class Permission {\n",
    "    // 各役割の権限定数\n",
    "    private static array $rolePermissions = [\n",
    "        'admin' => [\n",
    "            'create' => true,\n",
    "            'read' => true,\n",
    "            'update' => true,\n",
    "            'delete' => true,\n",
    "            'manage_users' => true,\n",
    "            'publish' => true,\n",
    "        ],\n",
    "        'editor' => [\n",
    "            'create' => true,\n",
    "            'read' => true,\n",
    "            'update' => true,\n",
    "            'delete' => false,\n",
    "            'manage_users' => false,\n",
    "            'publish' => true,\n",
    "        ],\n",
    "        'author' => [\n",
    "            'create' => true,\n",
    "            'read' => true,\n",
    "            'update' => true,\n",
    "            'delete' => true,\n",
    "            'manage_users' => false,\n",
    "            'publish' => true,\n",
    "        ],\n",
    "        'subscriber' => [\n",
    "            'create' => false,\n",
    "            'read' => true,\n",
    "            'update' => false,\n",
    "            'delete' => false,\n",
    "            'manage_users' => false,\n",
    "            'publish' => false,\n",
    "        ],\n",
    "    ];\n",
    "    \n",
    "    // 権限チェック\n",
    "    public static function can(string $role, string $action): bool {\n",
    "        if (!isset(self::$rolePermissions[$role][$action])) {\n",
    "            return false;\n",
    "        }\n",
    "        return self::$rolePermissions[$role][$action];\n",
    "    }\n",
    "    \n",
    "    // ユーザーの全権限を取得\n",
    "    public static function getUserPermissions(string $role): array {\n",
    "        if (!isset(self::$rolePermissions[$role])) {\n",
    "            return [];\n",
    "        }\n",
    "        return self::$rolePermissions[$role];\n",
    "    }\n",
    "    \n",
    "    // 権限を階層的にチェック（adminはeditorの権限も持つ）\n",
    "    public static function hasPermission(string $role, string $action): bool {\n",
    "        $hierarchy = ['admin', 'editor', 'author', 'subscriber'];\n",
    "        $index = array_search($role, $hierarchy);\n",
    "        \n",
    "        if ($index === false) {\n",
    "            return false;\n",
    "        }\n",
    "        \n",
    "        // そのロールとそれより上位のロールをチェック\n",
    "        for ($i = $index; $i < count($hierarchy); $i++) {\n",
    "            if (self::can($hierarchy[$i], $action)) {\n",
    "                return true;\n",
    "            }\n",
    "        }\n",
    "        \n",
    "        return false;\n",
    "    }\n",
    "}\n",
    "\n",
 "// Sessionクラス\n",
 "class Session {\n",
    "    private static ?User $currentUser = null;\n",
    "    private static bool $isLoggedIn = false;\n",
    "    \n",
    "    public static function login(User $user): void {\n",
    "        if (self::$isLoggedIn) {\n",
    "            echo \"既にログインしています\\n\";\n",
    "            return;\n",
    "        }\n",
    "        \n",
    "        if ($user->getStatus() !== 'active') {\n",
    "            throw new RuntimeException('アカウントがアクティブではありません');\n",
    "        }\n",
    "        \n",
    "        self::$currentUser = $user;\n",
    "        self::$isLoggedIn = true;\n",
    "        echo \"{$user->getUsername()}としてログインしました\\n\";\n",
    "    }\n",
    "    \n",
    "    public static function logout(): void {\n",
    "        if (!self::$isLoggedIn) {\n",
    "            echo \"ログインしていません\\n\";\n",
    "            return;\n",
    "        }\n",
    "        \n",
    "        $username = self::$currentUser->getUsername();\n",
    "        self::$currentUser = null;\n",
    "        self::$isLoggedIn = false;\n",
    "        echo \"{$username}をログアウトしました\\n\";\n",
    "    }\n",
    "    \n",
    "    public static function getCurrentUser(): ?User {\n",
    "        return self::$currentUser;\n",
    "    }\n",
    "    \n",
    "    public static function isLoggedIn(): bool {\n",
    "        return self::$isLoggedIn;\n",
    "    }\n",
    "}\n",
    "\n",
 "// 使用例\n",
 "echo \"【CMSユーザーシステム】\\n\";\n",
 "\n",
 "// ユーザーを作成\n",
 "$admin = new User('1', 'admin_user', 'admin@example.com', 'admin');\n",
 "$editor = new User('2', 'editor_user', 'editor@example.com', 'editor');\n",
 "$author = new User('3', 'author_user', 'author@example.com', 'author');\n",
 "\n",
 "// プロファイルを更新\n",
 "$admin->updateProfile([\n",
    "    'first_name' => 'システム',\n",
    "    'last_name' => '管理者',\n",
    "    'bio' => 'システム管理者です',\n",
    "]);\n",
 "\n",
 "// パスワードを設定\n",
 "$admin->setPassword('admin123');\n",
 "\n",
 "// 権限チェック\n",
 "echo \"\\n【権限チェック】\\n\";\n",
 "echo \"Admin can publish: \" . ($admin->canPublish() ? 'Yes' : 'No') . \"\\n\";\n",
 "echo \"Editor can publish: \" . ($editor->canPublish() ? 'Yes' : 'No') . \"\\n\";\n",
 "echo \"Author can publish: \" . ($author->canPublish() ? 'Yes' : 'No') . \"\\n\";\n",
 "\n",
 "// 静的クラスの使用例\n",
 "echo \"\\n【Permissionクラスの使用例】\\n\";\n",
 "echo \"Admin can delete: \" . (Permission::can('admin', 'delete') ? 'Yes' : 'No') . \"\\n\";\n",
 "echo \"Editor can delete: \" . (Permission::can('editor', 'delete') ? 'Yes' : 'No') . \"\\n\";\n",
 "echo \"Author can delete (own articles only): \" . ($author->canDelete(3) ? 'Yes' : 'No') . \"\\n\";\n",
 "\n",
 "// セッションでのログイン/ログアウト\n",
 "echo \"\\n【セッション管理】\\n\";\n",
 "Session::login($admin);\n",
