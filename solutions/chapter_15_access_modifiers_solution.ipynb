   "source": [
    "<language>php</language><?php\n",
    "\n",
 "class QueryBuilder {\n",
    "    private string $table = '';\n",
    "    private array $columns = [];\n",
    "    private array $where = [];\n",
    "    private ?string $orderBy = null;\n",
    "    private ?int $limit = null;\n",
    "    \n",
    "    // メソッドチェインを実現するために各メソッドは$thisを返す\n",
    "    public function select(array $columns): self {\n",
    "        $this->columns = $columns;\n",
    "        return $this;\n",
    "    }\n",
    "    \n",
    "    public function from(string $table): self {\n",
    "        $this->table = $table;\n",
    "        return $this;\n",
    "    }\n",
    "    \n",
    "    public function where(string $column, string $operator, $value): self {\n",
    "        $this->where[] = [\n",
    "            'column' => $column,\n",
    "            'operator' => $operator,\n",
    "            'value' => $value\n",
    "        ];\n",
    "        return $this;\n",
    "    }\n",
    "    \n",
    "    public function orderBy(string $column, string $direction = 'ASC'): self {\n",
    "        $validDirections = ['ASC', 'DESC'];\n",
    "        if (!in_array(strtoupper($direction), $validDirections)) {\n",
    "            throw new InvalidArgumentException('directionはASCまたはDESCで指定してください');\n",
    "        }\n",
    "        $this->orderBy = $column . ' ' . strtoupper($direction);\n",
    "        return $this;\n",
    "    }\n",
    "    \n",
    "    public function limit(int $value): self {\n",
    "        if ($value < 1) {\n",
    "            throw new InvalidArgumentException('limitは1以上の数値で指定してください');\n",
    "        }\n",
    "        $this->limit = $value;\n",
    "        return $this;\n",
    "    }\n",
    "    \n",
    "    // クエリを構築して返す\n",
    "    public function build(): string {\n",
    "        if (empty($this->table)) {\n",
    "            throw new RuntimeException('テーブル名が指定されていません');\n",
    "        }\n",
    "        \n",
    "        $sql = \"SELECT \";\n",
    "        \n",
    "        // 選択列\n",
    "        if (empty($this->columns)) {\n",
    "            $sql .= \"*\";\n",
    "        } else {\n",
    "            $sql .= implode(', ', $this->columns);\n",
    "        }\n",
    "        \n",
    "        // FROM句\n",
    "        $sql .= \" FROM \" . $this->table;\n",
    "        \n",
    "        // WHERE句\n",
    "        if (!empty($this->where)) {\n",
    "            $sql .= \" WHERE \";\n",
    "            $whereConditions = [];\n",
    "            foreach ($this->where as $condition) {\n",
    "                $whereConditions[] = \"{$condition['column']} {$condition['operator']} ?\";\n",
    "            }\n",
    "            $sql .= implode(' AND ', $whereConditions);\n",
    "        }\n",
    "        \n",
    "        // ORDER BY句\n",
    "        if ($this->orderBy) {\n",
    "            $sql .= \" ORDER BY \" . $this->orderBy;\n",
    "        }\n",
    "        \n",
    "        // LIMIT句\n",
    "        if ($this->limit !== null) {\n",
    "            $sql .= \" LIMIT \" . $this->limit;\n",
    "        }\n",
    "        \n",
    "        return $sql;\n",
    "    }\n",
    "    \n",
    "    // クエリを初期化\n",
    "    public function reset(): void {\n",
    "        $this->table = '';\n",
    "        $this->columns = [];\n",
    "        $this->where = [];\n",
    "        $this->orderBy = null;\n",
    "        $this->limit = null;\n",
    "    }\n",
    "    \n",
    "    // 存在しないプロパティへのアクセスを禁止\n",
    "    public function __get(string $name) {\n",
    "        throw new RuntimeException(\"'{$name}'プロパティは存在しません\");\n",
    "    }\n",
    "    \n",
    "    // クエリのパラメータを取得\n",
    "    public function getParameters(): array {\n",
    "        $params = [];\n",
    "        foreach ($this->where as $condition) {\n",
    "            $params[] = $condition['value'];\n",
    "        }\n",
    "        return $params;\n",
    "    }\n",
    "    \n",
    "    // クエリのプレビューを表示\n",
    "    public function preview(): void {\n",
    "        echo \"【SQLクエリ】\\n\";\n",
    "        echo $this->build() . \"\\n\";\n",
    "        if (!empty($this->where)) {\n",
    "            echo \"【パラメータ】\\n\";\n",
    "            print_r($this->getParameters());\n",
    "        }\n",
    "    }\n",
    "}\n",
    "\n",
 "// 使用例\n",
 "echo \"【クエリビルダーの使用例】\\n\";\n",
 "$query = new QueryBuilder();\n",
 "\n",
 "// メソッドチェイン\n",
 "$query->select(['id', 'name', 'email'])\n",
    "      ->from('users')\n",
    "      ->where('status', '=', 'active')\n",
    "      ->where('age', '>', '18')\n",
    "      ->orderBy('name', 'ASC')\n",
    "      ->limit(10);\n",
    "\n",
 "$query->preview();\n",
 "\n",
 "echo \"\\n【別のクエリ例】\\n\";\n",
 "$query2 = new QueryBuilder();\n",
 "$query2->select(['product_name', 'price'])\n",
    "       ->from('products')\n",
    "       ->where('category', '=', 'books')\n",
    "       ->where('price', '<', '3000')\n",
    "       ->orderBy('price', 'DESC')\n",
    "       ->limit(5);\n",
    "\n",
 "$query2->preview();\n",
 "\n",
 "// クエリの再利用\n",
 "echo \"\\n【クエリの再利用】\\n\";\n",
 "$query2->reset();\n",
 "$query2->select(['*'])\n",
    "      ->from('orders')\n",
    "      ->where('created_at', '>=', '2024-01-01')\n",
    "      ->orderBy('created_at', 'DESC');\n",
    "\n",
 "$query2->preview();\n",
 "\n",
 "// 存在しないプロパティにアクセス（エラーになる）\n",
 "echo \"\\n【存在しないプロパティへのアクセス】\\n\";\n",
 "try {\n",
    "    echo $query->invalidProperty;\n",
    "} catch (RuntimeException $e) {\n",
    "    echo \"エラー: {$e->getMessage()}\\n\";\n",
    "}\n",
    "\n",
 "?>"
   ]
