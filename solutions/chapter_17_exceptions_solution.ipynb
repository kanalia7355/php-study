    "    }\n",
 "}\n",
    "\n",
 // Promiseのチェーン",
 "echo \"\\n【Promiseチェーン】\\n\";\n",
 $promise = new Promise(function () {\n",
    "    echo \"Promise started\\n\";\n",
    "    return \"Initial value\";\n",
    "});\n",
    "\n",
 $promise\n",
    "    ->then(function ($value) {\n",
    "        echo \"First then: {$value}\\n\";\n",
    "        return \"Transformed value\";\n",
    "    })\n",
    "    ->then(function ($value) {\n",
    "        echo \"Second then: {$value}\\n\";\n",
    "        // ここで例外をスロー\n",
    "        throw new RuntimeException(\"Error in chain\");\n",
    "    })\n",
    "    ->catch(function ($error) {\n",
    "        echo \"Caught error: {$error->getMessage()}\\n\";\n",
    "    });\n",
    "\n",
 // 全てのPromiseが完了するまで待機",
 "while (true) {\n",
    "    if ($promise->getState() !== 'pending') {\n",
