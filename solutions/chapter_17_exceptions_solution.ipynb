    "<language>php</language><?php\n",
    "\n",
 "class Authenticator {\n",
    "    private array $users = [];\n",
    "    private array $failedAttempts = [];\n",
    "    private array $lockedAccounts = [];\n",
    "    private int $maxAttempts = 3;\n",
    "    private int $lockDuration = 300; // 5分\n",
    "    \n",
    "    public function __construct() {\n",
    "        // 初期ユーザー\n",
    "        $this->users['admin'] = [\n",
    "            'password' => password_hash('admin123', PASSWORD_DEFAULT),\n",
    "            'role' => 'admin'\n",
    "        ];\n",
    "        $this->users['user'] = [\n",
    "            'password' => password_hash('user123', PASSWORD_DEFAULT),\n",
    "            'role' => 'user'\n",
    "        ];\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * ログイン処理\n",
    "     * @throws AccountNotFoundException\n",
    "     * @throws InvalidCredentialsException\n",
    "     * @throws AccountLockedException\n",
    "     */\n",
    "    public function login(string $username, string $password): string {\n",
    "        // アカウントロックチェック\n",
    "        if ($this->isAccountLocked($username)) {\n",
    "            throw new AccountLockedException($this->lockedAccounts[$username]['unlock_time']);\n",
    "        }\n",
    "        \n",
    "        // ユーザー存在チェック\n",
    "        if (!isset($this->users[$username])) {\n",
    "            throw new AccountNotFoundException($username);\n",
    "        }\n",
    "        \n",
    "        // パスワードチェック\n",
    "        if (!password_verify($password, $this->users[$username]['password'])) {\n",
    "            $this->recordFailedAttempt($username);\n",
    "            throw new InvalidCredentialsException($username);\n",
    "        }\n",
    "        \n",
    "        // ログイン成功時に失敗記録をリセット\n",
    "        $this->resetFailedAttempts($username);\n",
    "        \n",
    "        return $this->users[$username]['role'];\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * ログアウト処理\n",
    "     */\n",
    "    public function logout(string $username): void {\n",
    "        echo \"User {$username} logged out\\n\";\n",
    "        // 実際にはセッションを破棄する処理\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * パスワード変更\n",
    "     * @throws AccountNotFoundException\n",
    "     * @throws InvalidCredentialsException\n",
    "     */\n",
    "    public function changePassword(string $username, string $oldPassword, string $newPassword): bool {\n",
    "        // ユーザー存在チェック\n",
    "        if (!isset($this->users[$username])) {\n",
    "            throw new AccountNotFoundException($username);\n",
    "        }\n",
    "        \n",
    "        // 古いパスワードチェック\n",
    "        if (!password_verify($oldPassword, $this->users[$username]['password'])) {\n",
    "            throw new InvalidCredentialsException($username);\n",
    "        }\n",
    "        \n",
    "        // 新しいパスワードに更新\n",
    "        $this->users[$username]['password'] = password_hash($newPassword, PASSWORD_DEFAULT);\n",
    "        \n",
    "        echo \"Password changed successfully for {$username}\\n\";\n",
    "        return true;\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * アカウントをロックするかチェック\n",
    "     */\n",
    "    private function isAccountLocked(string $username): bool {\n",
    "        if (!isset($this->lockedAccounts[$username])) {\n",
    "            return false;\n",
    "        }\n",
    "        \n",
    "        $lockInfo = $this->lockedAccounts[$username];\n",
    "        if (time() > $lockInfo['unlock_time']->getTimestamp()) {\n",
    "            // ロック期限切れ\n",
    "            unset($this->lockedAccounts[$username]);\n",
    "            unset($this->failedAttempts[$username]);\n",
    "            return false;\n",
    "        }\n",
    "        \n",
    "        return true;\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * ログイン失敗を記録\n",
    "     */\n",
    "    private function recordFailedAttempt(string $username): void {\n",
    "        if (!isset($this->failedAttempts[$username])) {\n",
    "            $this->failedAttempts[$username] = 0;\n",
    "        }\n",
    "        \n",
    "        $this->failedAttempts[$username]++;\n",
    "        \n",
    "        // 最大試行回数に達したらアカウントをロック\n",
    "        if ($this->failedAttempts[$username] >= $this->maxAttempts) {\n",
    "            $unlockTime = new DateTime();\n",
    "            $unlockTime->modify(\"+{$this->lockDuration} seconds\");\n",
    "            \n",
    "            $this->lockedAccounts[$username] = [\n",
    "                'unlock_time' => $unlockTime\n",
    "            ];\n",
    "            \n",
    "            echo \"Account {$username} has been locked for {$this->lockDuration} seconds\\n\";\n",
    "        }\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * 失敗試行回数をリセット\n",
    "     */\n",
    "    private function resetFailedAttempts(string $username): void {\n",
    "        unset($this->failedAttempts[$username]);\n",
    "        unset($this->lockedAccounts[$username]);\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * ロック状態を取得\n",
    "     */\n",
    "    public function getLockStatus(string $username): array {\n",
    "        if (!$this->isAccountLocked($username)) {\n",
    "            return ['locked' => false];\n",
    "        }\n",
    "        \n",
    "        return [\n",
    "            'locked' => true,\n",
    "            'unlock_time' => $this->lockedAccounts[$username]['unlock_time']->format('Y-m-d H:i:s')\n",
    "        ];\n",
    "    }\n",
 "}\n",
    "\n",
 "?>"
   ]
  },
