    "<language>php</language><?php\n",
    "\n",
 // 認証例外の階層",
 "class AuthenticationException extends RuntimeException {\n",
    "    public function __construct(string $message = '', int $code = 0, ?Throwable $previous = null) {\n",
    "        parent::__construct($message, $code, $previous);\n",
    "    }\n",
    "}\n",
    "\n",
 "class InvalidCredentialsException extends AuthenticationException {\n",
    "    public function __construct(string $username) {\n",
    "        parent::__construct(\"Invalid credentials for user: {$username}\");\n",
    "    }\n",
    "}\n",
    "\n",
 "class AccountLockedException extends AuthenticationException {\n",
    "    private DateTime $unlockTime;\n",
    "    \n",
    "    public function __construct(DateTime $unlockTime) {\n",
    "        $this->unlockTime = $unlockTime;\n",
    "        $unlock = $unlockTime->format('Y-m-d H:i:s');\n",
    "        parent::__construct(\"Account is locked until {$unlock}\");\n",
    "    }\n",
    "    \n",
    "    public function getUnlockTime(): DateTime {\n",
    "        return $this->unlockTime;\n",
    "    }\n",
    "}\n",
    "\n",
 "class AccountNotFoundException extends AuthenticationException {\n",
    "    public function __construct(string $username) {\n",
    "        parent::__construct(\"Account not found: {$username}\");\n",
    "    }\n",
    "}\n",
    "\n",
 "?>"
   ]
  },
