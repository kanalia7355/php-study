    "<language>php</language><?php\n",
    "\n",
 "class FileManager {\n",
    "    /**\n",
    "     * ファイルを読み込む\n",
    "     * @throws FileNotFoundException\n",
    "     * @throws FilePermissionException\n",
    "     */\n",
    "    public function readFile(string $path): string {\n",
    "        // ファイル存在チェック\n",
    "        if (!file_exists($path)) {\n",
    "            throw new FileNotFoundException($path);\n",
    "        }\n",
    "        \n",
    "        // 読み込み権限チェック\n",
    "        if (!is_readable($path)) {\n",
    "            throw new FilePermissionException($path, 'read');\n",
    "        }\n",
    "        \n",
    "        // ファイル読み込み\n",
    "        $content = file_get_contents($path);\n",
    "        if ($content === false) {\n",
    "            throw new RuntimeException(\"Failed to read file: {$path}\");\n",
    "        }\n",
    "        \n",
    "        return $content;\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * ファイルに書き込む\n",
    "     * @throws FileNotFoundException\n",
    "     * @throws FilePermissionException\n",
    "     * @throws FileWriteException\n",
    "     */\n",
    "    public function writeFile(string $path, string $content): void {\n",
    "        // ディレクトリが存在しない場合は作成\n",
    "        $dir = dirname($path);\n",
    "        if (!is_dir($dir)) {\n",
    "            mkdir($dir, 0755, true);\n",
    "        }\n",
    "        \n",
    "        // 書き込み権限チェック\n",
    "        if (file_exists($path) && !is_writable($path)) {\n",
    "            throw new FilePermissionException($path, 'write');\n",
    "        }\n",
    "        \n",
    "        // ファイル書き込み\n",
    "        $result = file_put_contents($path, $content);\n",
    "        if ($result === false) {\n",
    "            throw new FileWriteException($path);\n",
    "        }\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * ファイルを削除\n",
    "     * @throws FileNotFoundException\n",
    "     * @throws FilePermissionException\n",
    "     */\n",
    "    public function deleteFile(string $path): void {\n",
    "        // ファイル存在チェック\n",
    "        if (!file_exists($path)) {\n",
    "            throw new FileNotFoundException($path);\n",
    "        }\n",
    "        \n",
    "        // 削除権限チェック\n",
    "        if (!is_writable($path)) {\n",
    "            throw new FilePermissionException($path, 'delete');\n",
    "        }\n",
    "        \n",
    "        // ファイル削除\n",
    "        if (!unlink($path)) {\n",
    "            throw new RuntimeException(\"Failed to delete file: {$path}\");\n",
    "        }\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * ファイルをコピー\n",
    "     * @throws FileNotFoundException\n",
    "     * @throws FilePermissionException\n",
    "     * @throws FileWriteException\n",
    "     */\n",
    "    public function copyFile(string $source, string $destination): void {\n",
    "        // 元ファイルのチェック\n",
    "        if (!file_exists($source)) {\n",
    "            throw new FileNotFoundException($source);\n",
    "        }\n",
    "        \n",
    "        if (!is_readable($source)) {\n",
    "            throw new FilePermissionException($source, 'read');\n",
    "        }\n",
    "        \n",
    "        // ディレクトリの存在確認\n",
    "        $destDir = dirname($destination);\n",
    "        if (!is_dir($destDir)) {\n",
    "            mkdir($destDir, 0755, true);\n",
    "        }\n",
    "        \n",
    "        // コピー実行\n",
    "        if (!copy($source, $destination)) {\n",
    "            throw new FileWriteException($destination);\n",
    "        }\n",
    "    }\n",
    "}\n",
    "\n",
 "?>"
   ]
