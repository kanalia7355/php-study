    "    }\n",
    "    \n",
    "    public function executeQuery(string $sql): array {\n",
    "        if (!$this->connected) {\n",
    "            throw new DatabaseConnectionException('disconnected');\n",
    "        }\n",
    "        \n",
    "        try {\n",
    "            // クエリ実行をシミュレーション\n",
    "            if (strpos($sql, 'SELECT') === 0) {\n",
    "                if (strpos($sql, 'invalid') !== false) {\n",
    "                    throw new RuntimeException(\"Unknown column 'invalid'\");\n",
    "                }\n",
    "                return ['id' => 1, 'name' => 'Test'];\n",
