 // カスタム例外クラス",
 "class FileNotFoundException extends RuntimeException {\n",
    "    public function __construct(string $path) {\n",
    "        parent::__construct(\"File not found: {$path}\");\n",
    "    }\n",
    "}\n",
    "\n",
 "class FilePermissionException extends RuntimeException {\n",
    "    public function __construct(string $path, string $permission) {\n",
    "        parent::__construct(\"No {$permission} permission for file: {$path}\");\n",
    "    }\n",
    "}\n",
    "\n",
 "class FileWriteException extends RuntimeException {\n",
    "    public function __construct(string $path) {\n",
    "        parent::__construct(\"Failed to write to file: {$path}\");\n",
    "    }\n",
    "}\n",
    "\n",
 "?>"
   ]
