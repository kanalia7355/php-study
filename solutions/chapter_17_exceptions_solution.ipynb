    "<language>php</language><?php\n",
    "\n",
 "class BatchProcessor {\n",
    "    private array $items = [];\n",
    "    private int $successCount = 0;\n",
    "    private int $failureCount = 0;\n",
    "    private int $skipCount = 0;\n",
    "    private array $failedItems = [];\n",
    "    private array $skippedItems = [];\n",
    "    private string $logFile = '/tmp/batch.log';\n",
    "    \n",
    "    public function __construct(array $items) {\n",
    "        $this->items = $items;\n",
    "        $this->initLogFile();\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * 全てのアイテムを処理\n",
    "     */\n",
    "    public function processAll(): array {\n",
    "        $this->resetStats();\n",
    "        \n",
    "        foreach ($this->items as $index => $item) {\n",
    "            try {\n",
    "                $this->processItem($item, $index);\n",
    "                $this->successCount++;\n",
    "                $this->log(\"Processed item {$index}: \" . json_encode($item));\n",
    "            } catch (ItemSkippedException $e) {\n",
    "                $this->skipCount++;\n",
    "                $this->skippedItems[] = ['index' => $index, 'item' => $item, 'reason' => $e->getMessage()];\n",
    "                $this->log(\"Skipped item {$index}: {$e->getMessage()}\");\n",
    "            } catch (ProcessingException $e) {\n",
    "                $this->failureCount++;\n",
    "                $this->failedItems[] = ['index' => $index, 'item' => $item, 'error' => $e->getMessage()];\n",
    "                $this->log(\"Failed item {$index}: {$e->getMessage()}\", true);\n",
    "            }\n",
    "        }\n",
    "        \n",
    "        return $this->getStats();\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * チャンク単位で処理\n",
    "     */\n",
    "    public function processChunk(int $size = 10): array {\n",
    "        $this->resetStats();\n",
    "        $chunks = array_chunk($this->items, $size, true);\n",
    "        \n",
    "        foreach ($chunks as $chunkIndex => $chunk) {\n",
    "            try {\n",
    "                $this->processChunkItems($chunk, $chunkIndex);\n",
    "                $this->successCount += count($chunk);\n",
    "                $this->log(\"Processed chunk {$chunkIndex}: \" . count($chunk) . \" items\");\n",
    "            } catch (ChunkProcessingException $e) {\n",
    "                // チャンク全体が失敗\n",
    "                foreach ($chunk as $index => $item) {\n",
    "                    $this->failureCount++;\n",
    "                    $this->failedItems[] = ['index' => $index, 'item' => $item, 'error' => $e->getMessage()];\n",
    "                }\n",
    "                $this->log(\"Chunk {$chunkIndex} failed: {$e->getMessage()}\", true);\n",
    "            }\n",
    "        }\n",
    "        \n",
    "        return $this->getStats();\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * リトライ付き処理\n",
    "     */\n",
    "    public function processAllWithRetry(int $maxRetries = 3): array {\n",
    "        $this->resetStats();\n",
    "        \n",
    "        foreach ($this->items as $index => $item) {\n",
    "            $attempts = 0;\n",
    "            $success = false;\n",
    "            \n",
    "            while ($attempts <= $maxRetries && !$success) {\n",
    "                try {\n",
    "                    $this->processItem($item, $index);\n",
    "                    $this->successCount++;\n",
    "                    $success = true;\n",
    "                    $this->log(\"Processed item {$index} on attempt {$attempts + 1}\");\n",
    "                } catch (ProcessingException $e) {\n",
    "                    $attempts++;\n",
    "                    if ($attempts > $maxRetries) {\n",
    "                        $this->failureCount++;\n",
    "                        $this->failedItems[] = [\n",
    "                            'index' => $index, \n",
    "                            'item' => $item, \n",
    "                            'error' => $e->getMessage(),\n",
    "                            'attempts' => $attempts\n",
    "                        ];\n",
    "                        $this->log(\"Failed item {$index} after {$attempts} attempts: {$e->getMessage()}\", true);\n",
    "                    } else {\n",
    "                        $this->log(\"Retry item {$index} (attempt {$attempts + 1}): {$e->getMessage()}\");\n",
    "                        // リトライ待機\n",
    "                        sleep(1);\n",
    "                    }\n",
    "                } catch (ItemSkippedException $e) {\n",
    "                    $this->skipCount++;\n",
    "                    $this->skippedItems[] = ['index' => $index, 'item' => $item, 'reason' => $e->getMessage()];\n",
    "                    $this->log(\"Skipped item {$index}: {$e->getMessage()}\");\n",
    "                    break;\n",
    "                }\n",
    "            }\n",
    "        }\n",
    "        \n",
    "        return $this->getStats();\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * アイテムを処理（シミュレーション）\n",
    "     */\n",
    "    private function processItem($item, int $index): void {\n",
    "        // アイテムが失敗する条件をシミュレーション\n",
    "        if (isset($item['force_fail'])) {\n",
    "            throw new ProcessingException(\"Processing failed for item {$index}\");\n",
    "        }\n",
    "        \n",
    "        if (isset($item['skip'])) {\n",
    "            throw new ItemSkippedException(\"Item {$index} was skipped\");\n",
    "        }\n",
    "        \n",
    "        // 正常な処理（シミュレーション）\n",
    "        $processed = $item;\n",
    "        $processed['processed'] = true;\n",
    "        $processed['processed_at'] = date('Y-m-d H:i:s');\n",
    "        \n",
    "        // 結果を保持（実際にはDBなどに保存）\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * チャンク内のアイテムを処理\n",
    "     */\n",
    "    private function processChunkItems(array $chunk, int $chunkIndex): void {\n",
    "        // チャンク処理のシミュレーション\n",
    "        foreach ($chunk as $index => $item) {\n",
    "            if (isset($item['chunk_fail'])) {\n",
    "                throw new ChunkProcessingException(\"Chunk processing failed at item {$index}\");\n",
    "            }\n",
    "        }\n",
    "        \n",
    "        // 正常処理\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * 統計情報を取得\n",
    "     */\n",
    "    public function getStats(): array {\n",
    "        return [\n",
    "            'total' => count($this->items),\n",
    "            'success' => $this->successCount,\n",
    "            'failure' => $this->failureCount,\n",
    "            'skip' => $this->skipCount,\n",
    "            'failed_items' => $this->failedItems,\n",
    "            'skipped_items' => $this->skippedItems\n",
    "        ];\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * 統計情報をリセット\n",
    "     */\n",
    "    private function resetStats(): void {\n",
    "        $this->successCount = 0;\n",
    "        $this->failureCount = 0;\n",
    "        $this->skipCount = 0;\n",
    "        $this->failedItems = [];\n",
    "        $this->skippedItems = [];\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * ログファイルの初期化\n",
    "     */\n",
    "    private function initLogFile(): void {\n",
    "        if (file_exists($this->logFile)) {\n",
    "            unlink($this->logFile);\n",
    "        }\n",
    "    }\n",
    "    \n",
    "    /**\n",
    "     * ログを記録\n",
    "     */\n",
    "    private function log(string $message, bool $isError = false): void {\n",
    "        $timestamp = date('Y-m-d H:i:s');\n",
    "        $logEntry = \"[{$timestamp}] \" . ($isError ? 'ERROR: ' : '') . \"{$message}\\n\";\n",
    "        file_put_contents($this->logFile, $logEntry, FILE_APPEND);\n",
    "    }\n",
 "}\n",
    "\n",
 // カスタム例外",
 "class ProcessingException extends RuntimeException {}\n",
    "\n",
 "class ItemSkippedException extends RuntimeException {}\n",
    "\n",
 "class ChunkProcessingException extends RuntimeException {}\n",
    "\n",
 "?>"
   ]
