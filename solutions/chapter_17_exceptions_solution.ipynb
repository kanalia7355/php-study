    "<language>php</language><?php\n",
    "\n",
 "require_once 'AsyncTask.php';\n",
 "require_once 'TaskQueue.php';\n",
 "require_once 'Promise.php';\n",
    "\n",
 "echo \"【非同期処理の例外処理テスト】\\n\\n\";\n",
 "\n",
 // タスクキューの作成",
 $queue = new TaskQueue();\n",
    "\n",
 // 成功するタスク",
 "for ($i = 1; $i <= 3; $i++) {\n",
    "    $queue->addTask(function() use ($i) {\n",
    "        // 非同期処理をシミュレーション\n",
    "        usleep(rand(100000, 500000)); // 0.1〜0.5秒待機\n",
    "        return \"Task {$i} completed successfully\";\n",
    "    });\n",
 "}\n",
    "\n",
 // 失敗するタスク",
 "for ($i = 4; $i <= 6; $i++) {\n",
    "    $queue->addTask(function() use ($i) {\n",
    "        usleep(rand(100000, 500000));\n",
    "        if ($i === 5) {\n",
    "            throw new RuntimeException(\"Task {$i} intentionally failed\");\n",
    "        }\n",
    "        return \"Task {$i} completed\";\n",
    "    });\n",
 "}\n",
    "\n",
 // シーケンシャル実行",
 "echo \"【シーケンシャル実行】\\n\";\n",
 "results = $queue->executeAll();\n",
    "\n",
 "echo \"成功したタスク:\\n\";\n",
 "foreach ($results['success'] as $id => $result) {\n",
    "    echo \"  Task {$id}: {$result}\\n\";\n",
 "}\n",
    "\n",
 "echo \"\\n失敗したタスク:\\n\";\n",
 "foreach ($results['errors'] as $id => $error) {\n",
    "    echo \"  Task {$id}: {$error->getMessage()}\\n\";\n",
 "}\n",
    "\n",
 echo \"\\n\";\n",
    "\n",
 // パラレル実行",
 "echo \"【パラレル実行】\\n\";\n",
 $queue2 = new TaskQueue();\n",
    "for ($i = 1; $i <= 6; $i++) {\n",
    "    $queue2->addTask(function() use ($i) {\n",
    "        usleep(rand(100000, 500000));\n",
    "        if ($i % 3 === 0) {\n",
    "            throw new RuntimeException(\"Async task {$i} failed\");\n",
    "        }\n",
    "        return \"Parallel result {$i}\";\n",
    "    });\n",
 "}\n",
    "\n",
 "results2 = $queue2->executeParallel(2); // 同時に2つ実行\n",
    "\n",
 "echo \"成功結果:\\n\";\n",
 "print_r($results2['success']);\n",
    "\n",
 "echo \"\\nエラー:\\n\";\n",
 "foreach ($results2['errors'] as $id => $error) {\n",
    "    echo \"  Task {$id}: {$error->getMessage()}\\n\";\n",
 "}\n",
    "\n",
 // 集約例外",
 "echo \"\\n【集約例外】\\n\";\n",
 $aggregate = $queue2->getAggregateException();\n",
