 // Promiseクラス",
 "class Promise {\n",
    "    private bool $resolved = false;\n",
    "    private bool $rejected = false;\n",
    "    private $value;\n",
    "    private ?Throwable $reason;\n",
    "    private array $onFulfilled = [];\n",
    "    private array $onRejected = [];\n",
    "    \n",
    "    public function __construct(callable $task) {\n",
    "        try {\n",
    "            $result = $task();\n",
    "            $this->resolve($result);\n",
    "        } catch (Throwable $e) {\n",
    "            $this->reject($e);\n",
    "        }\n",
    "    }\n",
    "    \n",
    "    public function resolve($value): void {\n",
    "        if ($this->resolved || $this->rejected) {\n",
    "            return;\n",
    "        }\n",
    "        \n",
    "        $this->resolved = true;\n",
    "        $this->value = $value;\n",
    "        \n",
    "        foreach ($this->onFulfilled as $callback) {\n",
    "            try {\n",
    "                $callback($value);\n",
    "            } catch (Throwable $e) {\n",
    "                // ハンドラで例外が発生した場合は無視\n",
    "            }\n",
    "        }\n",
    "    }\n",
    "    \n",
    "    public function reject(Throwable $reason): void {\n",
    "        if ($this->resolved || $this->rejected) {\n",
    "            return;\n",
    "        }\n",
    "        \n",
    "        $this->rejected = true;\n",
    "        $this->reason = $reason;\n",
    "        \n",
    "        foreach ($this->onRejected as $callback) {\n",
    "            try {\n",
    "                $callback($reason);\n",
    "            } catch (Throwable $e) {\n",
    "                // ハンドラで例外が発生した場合は無視\n",
    "            }\n",
    "        }\n",
    "    }\n",
    "    \n",
    "    public function then(callable $onFulfilled, ?callable $onRejected = null): self {\n",
    "        $promise = new Promise(function () {\n",
    "            // 何もしない（チェイン用）\n",
    "        });\n",
    "        \n",
    "        if ($this->resolved) {\n",
    "            try {\n",
    "                $result = $onFulfilled($this->value);\n",
    "                $promise->resolve($result);\n",
    "            } catch (Throwable $e) {\n",
    "                $promise->reject($e);\n",
    "            }\n",
    "        } elseif ($this->rejected && $onRejected) {\n",
    "            try {\n",
    "                $result = $onRejected($this->reason);\n",
    "                $promise->resolve($result);\n",
    "            } catch (Throwable $e) {\n",
    "                $promise->reject($e);\n",
    "            }\n",
    "        } else {\n",
    "            $this->onFulfilled[] = $onFulfilled;\n",
    "            if ($onRejected) {\n",
    "                $this->onRejected[] = $onRejected;\n",
    "            }\n",
    "        }\n",
    "        \n",
    "        return $promise;\n",
    "    }\n",
    "    \n",
    "    public function catch(callable $onRejected): self {\n",
    "        return $this->then(null, $onRejected);\n",
    "    }\n",
    "\n",
    "    public function getState(): string {\n",
    "        if ($this->resolved) {\n",
    "            return 'fulfilled';\n",
    "        }\n",
    "        if ($this->rejected) {\n",
    "            return 'rejected';\n",
    "        }\n",
    "        return 'pending';\n",
    "    }\n",
 "}\n",
    "\n",
 "?>"
