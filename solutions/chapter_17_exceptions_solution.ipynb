    "                throw new RuntimeException(\"Cannot start transaction\");\n",
    "            }\n",
    "        } catch (RuntimeException $e) {\n",
    "            throw new TransactionException('begin', $e->getMessage(), $e);\n",
    "        }\n",
    "    }\n",
    "    \n",
    "    public function commit(): void {\n",
    "        if (!$this->connected) {\n",
    "            throw new DatabaseConnectionException('disconnected');\n",
    "        }\n",
    "        \n",
    "        try {\n",
    "            // コミットをシミュレーション\n",
