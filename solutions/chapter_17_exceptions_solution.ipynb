    "<language>php</language><?php\n",
    "\n",
 "use Exception;\n",
 "\n",
 "class ApiResponse {\n",
    "    private int $statusCode;\n",
    "    private array $data;\n",
    "    private array $errors;\n",
    "    private array $headers;\n",
    "    \n",
    "    public function __construct(int $statusCode = 200, array $data = [], array $errors = [], array $headers = []) {\n",
    "        $this->statusCode = $statusCode;\n",
    "        $this->data = $data;\n",
    "        $this->errors = $errors;\n",
    "        $this->headers = array_merge(['Content-Type: application/json; charset=utf-8'], $headers);\n",
    "    }\n",
    "    \n",
    "    public function send(): void {\n",
    "        // ヘッダー送信\n",
    "        foreach ($this->headers as $header) {\n",
    "            header($header, true, $this->statusCode);\n",
    "        }\n",
    "        \n",
    "        // レスポンス本体\n",
    "        $response = [\n",
    "            'success' => $this->statusCode < 400,\n",
    "            'status' => $this->statusCode,\n",
    "        ];\n",
    "        \n",
    "        if (!empty($this->data)) {\n",
    "            $response['data'] = $this->data;\n",
    "        }\n",
    "        \n",
    "        if (!empty($this->errors)) {\n",
    "            $response['errors'] = $this->errors;\n",
    "        }\n",
    "        \n",
    "        echo json_encode($response, JSON_UNESCAPED_UNICODE | JSON_PRETTY_PRINT);\n",
    "    }\n",
    "    \n",
    "    public static function fromException(Exception $e): self {\n",
    "        if ($e instanceof ApiException) {\n",
    "            return new self(\n",
    "                $e->getStatusCode(),\n",
    "                [],\n",
    "                [$e->getMessage()],\n",
    "                $e->getHeaders()\n",
    "            );\n",
    "        }\n",
    "        \n",
    "        // その他の例外は500エラーとして扱う\n",
    "        return new self(\n",
    "            500,\n",
    "            [],\n",
    "            ['Internal server error'],\n",
    "            ['Content-Type: application/json']\n",
    "        );\n",
    "    }\n",
    "    \n",
    // 成功レスポンスの作成",
    "    public static function success(array $data = [], array $headers = []): self {\n",
    "        return new self(200, $data, [], $headers);\n",
    "    }\n",
    "    \n",
    // エラーレスポンスの作成",
    "    public static function error(string $message, int $statusCode = 400, array $headers = []): self {\n",
    "        return new self($statusCode, [], [$message], $headers);\n",
    "    }\n",
 "}\n",
    "\n",
 "?>"
