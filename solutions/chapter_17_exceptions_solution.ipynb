    "<language>php</language><?php\n",
    "\n",
 // AsyncTaskクラス",
 "class AsyncTask {\n",
    "    private int $id;\n",
    "    private callable $task;\n",
    "    private ?Promise $promise;\n",
    "    private array $result = [];\n",
    "    private ?Throwable $exception = null;\n",
    "    \n",
    "    public function __construct(int $id, callable $task) {\n",
    "        $this->id = $id;\n",
    "        $this->task = $task;\n",
    "    }\n",
    "    \n",
    "    public function getId(): int {\n",
    "        return $this->id;\n",
    "    }\n",
    "    \n",
    "    public function execute(): Promise {\n",
    "        if ($this->promise) {\n",
    "            return $this->promise;\n",
    "        }\n",
    "        \n",
    "        $this->promise = new Promise(function () {\n",
    "            // タスク実行\n",
    "            try {\n",
    "                $result = call_user_func($this->task);\n",
    "                $this->result = $result;\n",
    "            } catch (Throwable $e) {\n",
    "                $this->exception = $e;\n",
    "                throw $e;\n",
    "            }\n",
    "        });\n",
    "        \n",
    "        return $this->promise;\n",
    "    }\n",
    "    \n",
    "    public function getResult() {\n",
    "        return $this->result;\n",
    "    }\n",
    "    \n",
    "    public function getException(): ?Throwable {\n",
    "        return $this->exception;\n",
    "    }\n",
    "    \n",
    "    public function isCompleted(): bool {\n",
    "        return $this->promise !== null;\n",
    "    }\n",
    "    \n",
    "    public function isSuccessful(): bool {\n",
    "        return $this->isCompleted() && $this->exception === null;\n",
    "    }\n",
 "}\n",
    "\n",
 // TaskQueueクラス",
 "class TaskQueue {\n",
    "    private array $tasks = [];\n",
    "    private array $promises = [];\n",
    "    \n",
    "    public function addTask(callable $task): int {\n",
    "        $taskId = count($this->tasks) + 1;\n",
    "        $this->tasks[$taskId] = $task;\n",
    "        return $taskId;\n",
    "    }\n",
    "    \n",
    "    public function addAsyncTask(int $id, callable $task): void {\n",
    "        $this->tasks[$id] = $task;\n",
    "    }\n",
    "    \n",
    "    public function executeAll(): array {\n",
    "        $results = [];\n",
    "        $exceptions = [];\n",
    "        \n",
    "        foreach ($this->tasks as $id => $task) {\n",
    "            $asyncTask = new AsyncTask($id, $task);\n",
    "            $promise = $asyncTask->execute();\n",
    "            $this->promises[$id] = $promise;\n",
    "            \n",
    "            $promise->then(\n",
    "                function ($result) use ($id, &$results) {\n",
    "                    $results[$id] = $result;\n",
    "                },\n",
    "                function (Throwable $e) use ($id, &$exceptions) {\n",
    "                    $exceptions[$id] = $e;\n",
    "                }\n",
    "            );\n",
    "        }\n",
    "        \n",
    "        // 全てのPromiseが完了するまで待機\n",
    "        while (true) {\n",
    "            $allResolved = true;\n",
    "            foreach ($this->promises as $promise) {\n",
    "                if ($promise->getState() === 'pending') {\n",
    "                    $allResolved = false;\n",
    "                    break;\n",
    "                }\n",
    "            }\n",
    "            \n",
    "            if ($allResolved) {\n",
    "                break;\n",
    "            }\n",
    "            \n",
    "            // 0.1秒待機\n",
    "            usleep(100000);\n",
    "        }\n",
    "        \n",
    "        return [\n",
    "            'success' => $results,\n",
    "            'errors' => $exceptions\n",
    "        ];\n",
    "    }\n",
    "    \n",
    "    public function executeParallel(int $concurrent = 4): array {\n",
    "        $results = [];\n",
    "        $exceptions = [];\n",
    "        $chunks = array_chunk($this->tasks, $concurrent, true);\n",
    "        \n",
    "        foreach ($chunks as $chunk) {\n",
    "            $chunkPromises = [];\n",
    "            \n",
    "            foreach ($chunk as $id => $task) {\n",
    "                $asyncTask = new AsyncTask($id, $task);\n",
    "                $promise = $asyncTask->execute();\n",
    "                $chunkPromises[$id] = $promise;\n",
    "                \n",
    "                $promise->then(\n",
    "                    function ($result) use ($id, &$results) {\n",
    "                        $results[$id] = $result;\n",
    "                    },\n",
    "                    function (Throwable $e) use ($id, &$exceptions) {\n",
    "                        $exceptions[$id] = $e;\n",
    "                    }\n",
    "                );\n",
    "            }\n",
    "            \n",
    "            // チャンクの完了待機\n",
    "            while (true) {\n",
    "                $allResolved = true;\n",
    "                foreach ($chunkPromises as $promise) {\n",
    "                    if ($promise->getState() === 'pending') {\n",
    "                        $allResolved = false;\n",
    "                        break;\n",
    "                    }\n",
    "                }\n",
    "                \n",
    "                if ($allResolved) {\n",
    "                    break;\n",
    "                }\n",
    "                \n",
    "                usleep(100000);\n",
    "            }\n",
    "        }\n",
    "        \n",
    "        return [\n",
    "            'success' => $results,\n",
    "            'errors' => $exceptions\n",
    "        ];\n",
    "    }\n",
    "    \n",
    "    public function getAggregateException(): ?AggregateException {\n",
    "        $exceptions = [];\n",
    "        \n",
    "        foreach ($this->promises as $id => $promise) {\n",
    "            if ($promise->getState() === 'rejected') {\n",
    "                $exceptions[] = new AsyncException(\"Task {$id} failed\", $id, $promise->reason);\n",
    "            }\n",
    "        }\n",
    "        \n",
    "        if (!empty($exceptions)) {\n",
    "            return new AggregateException(\"Multiple tasks failed\", $exceptions);\n",
    "        }\n",
    "        \n",
    "        return null;\n",
    "    }\n",
 "}\n",
    "\n",
 "?>"
